# ===================================================================
# CRUZEIRO ACADEMY CMS - ENVIRONMENT CONFIGURATION
# ===================================================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/cruzeiro_academy
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cruzeiro_academy
DB_USER=postgres
DB_PASSWORD=your_password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000

# JWT Configuration (Será substituído por Secrets Manager em produção)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# S3 Configuration for Media Upload
S3_BUCKET_NAME=cruzeiro-academy-media
S3_CLOUDFRONT_DOMAIN=media.cruzeiroacademy.com

# Secrets Manager Configuration (Production)
DB_SECRET_NAME=cruzeiro-academy/db-credentials
JWT_SECRET_NAME=cruzeiro-academy/jwt-secret

# CloudWatch Logs Configuration
CLOUDWATCH_LOG_GROUP=/aws/ec2/cruzeiro-academy-cms
CLOUDWATCH_LOG_STREAM=backend

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://cms.cruzeiroacademy.com,https://br.cruzeiroacademy.com
CORS_CREDENTIALS=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10000

# Audit Log Retention (days)
AUDIT_LOG_RETENTION_DAYS=90

# Media Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,application/pdf
